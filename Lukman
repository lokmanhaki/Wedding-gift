    <button onclick="copyText()">Salin Teks</button>
</div>

<script>
    function copyText() {
        const text = document.getElementById("text").innerText;
        navigator.clipboard.writeText(text).then(() => {
            alert("Teks berhasil disalin!");
        }).catch(err => {
            alert("Gagal menyalin teks");
        });
    }
</script>

